<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:title="App"
        android:summary="Set App ID and Signature"
        android:id="@+id/appidPreference">
        <intent android:action="com.chartboost.sdk.sample.apps.AppsActivity"
            android:targetPackage="com.chartboost.sdk.sample"
            android:targetClass="com.chartboost.sdk.sample.apps.AppsActivity"/>
    </Preference>

    <SwitchPreference
        android:title="Request interstitials in first session"
        android:defaultValue="true"
        android:key="@string/key_request_interstitial_in_first_session"
        android:id="@+id/setShouldRequestInterstitialsInFirstSessionPreference"/>

    <SwitchPreference
        android:title="Prefetch Video Content"
        android:defaultValue="true"
        android:key="@string/key_enable_video_prefetch"
        android:id="@+id/setShouldPrefetchVideoContentPreference"/>

    <SwitchPreference
        android:title="Auto Cache Ads"
        android:defaultValue="true"
        android:key="@string/key_enable_autocache"
        android:id="@+id/setAutoCacheAdsPreference"/>
</PreferenceScreen>
